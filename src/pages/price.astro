---
import Header from '../components/Header.astro';
import Footer from '../components/Sections/Footer.astro';
import PricingPlans from '../components/Price/PricingPlans.astro';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Herewegoal</title>
		<meta name="description" content="Herewegoal is a simple project management tool that allows you to manage your projects and collaborate with your team without login."/>
	</head>

	<body class="bg-[#121212] scroll-smooth shadow-lg min-h-screen flex flex-col">
		<Header />
		<div class="container mx-auto flex flex-col items-center justify-center flex-grow">
            <PricingPlans />
		</div>
        <script src="../js/main.js"></script>
    </body>
    <footer class="w-full bg-[#121212]">
		<Footer />
	</footer>
</html>
