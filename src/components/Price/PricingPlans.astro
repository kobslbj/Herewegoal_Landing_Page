---
import { Button, Card } from "@heroui/react";

const plans = [
  { 
    name: 'Herewegoal', 
    price: 'Free', 
    features: ['Feature 1', 'Feature 2'],
    isPro: false
  },
  { 
    name: 'Herewegoal Pro', 
    price: '$5/month', 
    features: ['Feature 1', 'Feature 2', 'Feature 3'],
    isPro: true
  },
];
---

<div class="my-10 flex flex-col items-center w-full sm:w-3/4 lg:w-2/3 mx-auto">
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 sm:gap-14 w-full">
    {plans.map(plan => (
      <Card 
        className={`relative border rounded-2xl p-4 sm:p-6 w-full shadow-lg transition-all duration-300 ease-in-out bg-[#121212] text-white 
                  ${plan.isPro ? 'border-blue-500 ring-2 ring-blue-500/50 shadow-blue-500/50' : 'border-gray-800'} 
                  hover:shadow-2xl hover:scale-105`}>
        
        <h2 class="text-xl sm:text-2xl font-bold mb-2 sm:mb-4 text-white">{plan.name}</h2>
        <p class="text-3xl sm:text-4xl font-extrabold mb-4 sm:mb-6 text-white">{plan.price}</p>
        <ul class="space-y-1 sm:space-y-2 mb-4 sm:mb-6">
          {plan.features.map(feature => (
            <li class="text-gray-300">{feature}</li>
          ))}
        </ul>

        <Button 
          variant={plan.isPro ? "primary" : "outline"} 
          size="lg" 
          className="w-full py-2 sm:py-3 rounded-xl transition-all hover:scale-105"
        >
          {plan.isPro ? "Upgrade Now" : "Get Started"}
        </Button>

      </Card>
    ))}
  </div>
</div>

