---
import Container from "../../shared/Container.astro";
import { Image } from 'astro:assets';
import HerewegoalHeroImage from "../../assets/images/HerewegoalHero.jpg";
---

<section class="relative pt-32 lg:pt-36">
    <Container className="flex flex-col gap-10 items-center">
        <div class="relative flex flex-col items-center text-center py-7 xl:py-8 max-w-4xl mx-auto">
            <h1 class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight xl:text-6xl/tight font-bold text-heading-1 text-white">
                Simple project management <span class="text-transparent bg-clip-text bg-gradient-to-br from-indigo-400 from-20% via-primary-light via-30% to-green-400"><br>collab without login</span>
            </h1>
            <p class="text-xl mt-8 text-gray-300">
                <b>Herewegoal</b> is a simple project management tool that allows you to manage your projects and collaborate with your team without login.
            </p>
        </div>
        <div class="flex flex-1 h-auto relative max-w-4xl mx-auto">
            <Image 
                src={HerewegoalHeroImage} 
                alt="Hero image" 
                class="rounded-2xl border-2 border-box-border" 
                width="1508" 
                height="904" 
                loading="eager" 
                decoding="async"
            />
        </div>
    </Container>
</section>